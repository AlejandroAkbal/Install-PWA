{
	"printWidth": 120,
	"useTabs": true,
	"semi": false,
	"arrowParens": "always",
	"singleQuote": true,
	"trailingComma": "none",

	"singleAttributePerLine": true,

	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss"],
	"pluginSearchDirs": false,

	"sortTailwindcssClasses": true,

	"overrides": [{ "files": "*.svelte", "options": { "parser": "svelte" } }]
}
